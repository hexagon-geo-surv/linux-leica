			CROCODILE_IMX8_SD1_CMD		0x1d6
			CROCODILE_IMX8_SD1_DATA0		0x1d6
			CROCODILE_IMX8_SD1_DATA1		0x1d6
			CROCODILE_IMX8_SD1_DATA2		0x1d6
			CROCODILE_IMX8_SD1_DATA3		0x1d6
			>;
		};

	pinctrl_reg_usdhc2_vmmc: regusdhc2vmmcgrp {
