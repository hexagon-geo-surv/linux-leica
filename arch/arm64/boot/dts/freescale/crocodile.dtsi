			CROCODILE_IMX8_SD1_CLK		0x194
			CROCODILE_IMX8_SD1_CMD		0x1d4
			CROCODILE_IMX8_SD1_DATA0		0x1d4
			CROCODILE_IMX8_SD1_DATA1		0x1d4
			CROCODILE_IMX8_SD1_DATA2		0x1d4
