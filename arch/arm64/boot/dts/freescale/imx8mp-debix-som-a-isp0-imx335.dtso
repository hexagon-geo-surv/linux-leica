/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

#include "imx8mp-debix-som-a-isp0.dtsi"

/* Arducam IMX335 Fixed 24 MHz crystal */
&{/} {
	/* 24 MHz Crystal on the camera module */
	imx335_inclk_0: imx335_inclk_24m {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		status = "okay";
		clock-frequency = <24000000>;
	};

	reg_imx335_0_3v3: regulator-imx335-0-vdd3v3 {
		compatible = "regulator-fixed";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_csi0_pwdn>;
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-name = "IMX335_0_POWER_EN";
		gpio = <&gpio2 11 GPIO_ACTIVE_HIGH>;
		vin-supply = <&reg_csi1_3v3>;
		startup-delay-us = <300000>;
		enable-active-high;
	};
};

&i2c2 {
	imx335_0: sensor@1a {
		compatible = "sony,imx335";
		reg = <0x1a>;

		clocks = <&imx335_inclk_0>;
		clock-names = "xclk";

		rotation = <180>;
		orientation = <0>;

		status = "okay";

		/* Arducam IMX335 module uses *only* the 3v3 line */
		avdd-supply = <&reg_imx335_0_3v3>;
		ovdd-supply = <&reg_imx335_0_3v3>;
		dvdd-supply = <&reg_imx335_0_3v3>;

		port {
			sensor_0_out: endpoint {
				remote-endpoint = <&mipi_csi_0_in>;
				clock-lanes = <0>;
				data-lanes = <1 2 3 4>;
				link-frequencies = /bits/ 64 <594000000>;
			};
		};
	};
};

&mipi_csi_0 {
	status = "okay";

	ports {
		port@0 {
			mipi_csi_0_in: endpoint {
				remote-endpoint = <&sensor_0_out>;
				clock-lanes = <0>;
				data-lanes = <1 2 3 4>;
			};
		};
	};
};

